generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId       Int           @id @default(autoincrement())
  email        String        @unique
  name         String?
  password     String
  whatsapp     String?
  viber        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  Message      Message[]
  clientGroups ClientGroup[] // A user can have many client groups
  clients      Client[]
  shedules     Shedule[]
  messageHistories MessageHistory[]

  @@map("users")
}

model Client {
  clientId            Int                   @id @default(autoincrement())
  userId              Int
  firstName           String
  lastName            String?
  nickName            String?
  phone               String
  appointment         DateTime
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
  clientGroups        ClientClientGroup[]
  user                User                  @relation(fields: [userId], references: [userId])
  messageHistories    MessageHistory[]

  @@map("clients")
}

model ClientClientGroup {
  id            Int         @id @default(autoincrement())
  clientId      Int
  clientGroupId Int
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  client        Client      @relation(fields: [clientId], references: [clientId])
  clientGroup   ClientGroup @relation(fields: [clientGroupId], references: [clientGroupId])

  @@index([clientId, clientGroupId])
}

model ClientGroup {
  clientGroupId       Int                   @id @default(autoincrement())
  userId              Int
  name                String
  description         String?
  clients             ClientClientGroup[]
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
  user                User                  @relation(fields: [userId], references: [userId])
  shedules            Shedule[]
  messageHistories    MessageHistory[]

  @@map("client_groups")
}

model Message {
  messageId Int      @id @default(autoincrement())
  userId    Int
  title     String   @db.VarChar(1500)
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [userId])
  shedules  Shedule[]
  messageHistories MessageHistory[]

  @@map("messages")
}

model Shedule {
  sheduleId       Int           @id @default(autoincrement())
  userId          Int
  clientGroupId   Int
  messageId       Int
  name            String
  status          Status        @default(ACTIVE)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  user            User          @relation(fields: [userId], references: [userId])
  clientGroup     ClientGroup   @relation(fields: [clientGroupId], references: [clientGroupId])
  message         Message       @relation(fields: [messageId], references: [messageId])

  @@map("shedules")
}

enum Status {
  ACTIVE
  INACTIVE
}

model MessageHistory {
  messageHistoryId Int      @id @default(autoincrement())
  userId           Int
  messageId        Int
  clientId         Int
  clientGroupId    Int
  flag             Flag
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [userId])
  message          Message  @relation(fields: [messageId], references: [messageId])
  client           Client   @relation(fields: [clientId], references: [clientId])
  clientGroup      ClientGroup @relation(fields: [clientGroupId], references: [clientGroupId])

  @@map("message_histories")
}

enum Flag {
  Success
  Error
}